entrypoint = "index.js"
modules = ["nodejs-20:v8-20230920-bd784b9"]
hidden = [".config", "package-lock.json"]

[nix]
channel = "stable-23_05"

[unitTest]
language = "nodejs"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173
exposeLocalhost = true

[[ports]]
localPort = 5174
externalPort = 3000

[workflows]
runButton = "Run App"

[[workflows.workflow]]
name = "Run App"
author = 23630087
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Server && npm install && node index.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Client && npm install && npm run dev -- --host 0.0.0.0"
